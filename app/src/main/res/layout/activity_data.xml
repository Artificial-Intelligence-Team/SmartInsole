<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_data"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    tools:context="com.example.alex.myapplication.model.data_presenter.DataActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000" />

    <TextView
        android:id="@+id/serialReceivedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/gauge3"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:textSize="10sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="#000000"
        android:text="Detect"
        android:textColor="@color/md_white_1000"
        android:textSize="20dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_alignBottom="@+id/toolbar"
        android:layout_alignRight="@+id/gauge2"
        android:layout_marginRight="70dp"
        android:background="#000000"
        android:text="BLE"
        android:textColor="@color/md_white_1000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <pl.pawelkleczkowski.customgauge.CustomGauge
        android:id="@+id/gauge1"
        android:layout_width="134dp"
        android:layout_height="147dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="57dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        app:gaugeEndValue="50"
        app:gaugePointEndColor="@color/md_red_800"
        app:gaugePointStartColor="@color/md_red_100"
        app:gaugeStartAngle="135"
        app:gaugeStartValue="0"
        app:gaugeStrokeCap="BUTT"
        app:gaugeStrokeColor="@color/md_grey_400"
        app:gaugeStrokeWidth="20dp"
        app:gaugeSweepAngle="270" />
    <!--- app:gaugePointSize="6" -->
    <pl.pawelkleczkowski.customgauge.CustomGauge
        android:id="@+id/gauge2"
        android:layout_width="140dp"
        android:layout_height="147dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/gauge1"
        android:layout_marginRight="35dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        app:gaugeEndValue="100"
        app:gaugePointEndColor="@color/md_blue_100"
        app:gaugePointStartColor="@color/md_blue_200"
        app:gaugeStartAngle="135"
        app:gaugeStartValue="0"
        app:gaugeStrokeCap="BUTT"
        app:gaugeStrokeColor="@color/md_grey_400"
        app:gaugeStrokeWidth="20dp"
        app:gaugeSweepAngle="270" />
    <pl.pawelkleczkowski.customgauge.CustomGauge
        android:id="@+id/gauge3"
        android:layout_width="200dp"
        android:layout_height="189dp"
        android:layout_below="@+id/gauge1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        app:gaugeDividerColor="@color/md_black_1000"
        app:gaugeDividerDrawFirst="false"
        app:gaugeDividerDrawLast="true"
        app:gaugeDividerSize="1"
        app:gaugeDividerStep="30"
        app:gaugeEndValue="100"
        app:gaugePointEndColor="@color/md_red_700"
        app:gaugePointStartColor="@color/md_orange_100"
        app:gaugeStartAngle="180"
        app:gaugeStartValue="0"
        app:gaugeStrokeCap="BUTT"
        app:gaugeStrokeColor="@color/md_grey_400"
        app:gaugeStrokeWidth="20dp"
        app:gaugeSweepAngle="180" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gauge3"
        android:layout_alignEnd="@+id/imageButton1"
        android:layout_alignRight="@+id/imageButton1"
        android:text="溫度"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gauge3"
        android:layout_alignEnd="@+id/imageButton2"
        android:layout_alignRight="@+id/imageButton2"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="濕度"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gauge3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="黴菌環境"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="59dp"
        android:background="@drawable/image3" />
    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/image2" />
</RelativeLayout>
